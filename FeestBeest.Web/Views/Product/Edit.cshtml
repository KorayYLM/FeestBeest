@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FeestBeest.Web.Models.OneProductViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/css/uikit.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
<div class="flex items-center justify-center min-h-screen w-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-center">Edit Product</h2>
        <form method="post" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700" for="Name">Name</label>
                <input class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" type="text" id="Name" name="Name" value="@Model.Name" required>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700" for="Type">Type</label>
                <input class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" type="text" id="Type" name="Type" value="@Model.Type" required>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700" for="Price">Price</label>
                <input class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2"
                       type="number" step="0.01" id="Price" name="Price" value="@Model.Price" required>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700" for="Img">Img</label>
                <input class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" type="text" id="Img" name="Img" value="@Model.Img" required>
            </div>
            <div class="flex justify-between items-center">
                <a href="@Url.Action("Index")" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600">Cancel</a>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Save</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>