@model ShowPasswordViewModel

<div class="flex items-center justify-center min-h-screen w-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-6 text-center">Account Aangemaakt</h2>
        <p class="text-center mb-4">Het account is succesvol aangemaakt. Hier zijn de details:</p>
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Email</label>
                <p class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-sm">@Model.Email</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Wachtwoord</label>
                <p class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-sm">@Model.Password</p>
            </div>
        </div>
        <div class="col-span-2 flex justify-end space-x-4 mt-6">
            <a href="/" class="py-2 px-4 bg-gray-500 text-white font-semibold rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">Terug naar Home</a>
        </div>
    </div>
</div>