@{
    ViewData["Title"] = "Show Password";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-center text-2xl font-bold mb-6">Your Account has been created</h2>
        <p class="text-center text-lg mb-4">Your generated password is: <strong class="text-indigo-600">@ViewBag.Password</strong></p>
        <div class="flex justify-center">
            <a asp-action="Login" class="btn btn-primary text-white bg-indigo-600 hover:bg-indigo-700 px-4 py-2 rounded-md">Go to Login</a>
        </div>
    </div>
</div>