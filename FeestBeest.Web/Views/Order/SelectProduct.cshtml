@using ProductType = FeestBeest.Data.Models.ProductType
@model OrderViewModel
@{
    ViewData["Title"] = "Products";
    ViewData["date"] = Model.OrderFor;
    ViewData["step"] = "Shop";
}

<span class="block mb-4">Items in basket: @Model.ProductsOverViewModel.BasketCount</span>

<div class="flex flex-wrap -mx-3">
    <div class="w-full lg:w-1/4 px-3 mb-6 lg:mb-0">
        <form id="filterForm" method="get" asp-action="Shop">
            <input type="hidden" name="date" value="@Model.OrderFor.ToString("yyyy-MM-dd")"/>
            @foreach (var type in Enum.GetValues(typeof(ProductType)).Cast<ProductType>())
            {
                <div class="form-check mb-2">
                    <input name="selectedTypes" class="form-check-input" type="checkbox" value="@type" id="type_@type" @(Model.ProductsOverViewModel.SelectedTypes.Contains(type) ? "checked" : "") onchange="submitForm()"/>
                    <label class="form-check-label" for="type_@type">@type</label>
                </div>
            }
        </form>
    </div>
    <div class="w-full lg:w-3/4 px-3">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
            @foreach (var product in Model.Products)
            {
                <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-4">
                    <img src="~/Img/Beestjes/@product.Img" class="h-32 w-full object-contain mb-4" alt="Afbeelding van @product.Name"/>
                    <div class="text-lg font-bold mb-2">@product.Name</div>
                    <div class="text-gray-700 mb-2">@product.Type</div>
                    <div class="text-gray-900 font-semibold mb-4">€@product.Price</div>
                    <div class="flex justify-center">
                        @if (product.IsInBasket)
                        {
                            <form method="post" asp-action="RemoveFromBasket" asp-controller="Order">
                                <input type="hidden" name="productId" value="@product.Id"/>
                                <input type="hidden" name="date" value="@Model.OrderFor.ToString("yyyy-MM-dd")"/>
                                <button class="btn btn-danger w-100">Remove from basket</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-action="AddToBasket" asp-controller="Order">
                                <input type="hidden" name="productId" value="@product.Id"/>
                                <input type="hidden" name="date" value="@Model.OrderFor.ToString("yyyy-MM-dd")"/>
                                <button class="btn btn-primary w-100">Add to basket</button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
        @if (Model.ProductsOverViewModel.BasketCount > 0)
        {
            <form method="get" asp-action="Contact" class="w-full mt-6">
                <input type="hidden" name="date" value="@Model.OrderFor.ToString("yyyy-MM-dd")"/>
                <input type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" value="Next step"/>
            </form>
        }
        else
        {
            <div class="alert alert-warning w-full mt-6" role="alert">
                Please select at least one product
            </div>
        }
    </div>
</div>

<script>
    function submitForm() {
        document.getElementById('filterForm').submit();
    }
</script>