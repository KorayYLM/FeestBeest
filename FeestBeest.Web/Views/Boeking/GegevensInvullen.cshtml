@model GegevensInvullenViewModel

<div class="container mx-auto p-6">
    <!-- Stappenindicator -->
    <div class="flex justify-center items-center space-x-32 mb-4">
        @foreach (var step in new[] { "Beestjes", "Gegevens", "Bevestig" })
        {
            var currentIndex = Array.IndexOf(new[] { "Beestjes", "Gegevens", "Bevestig" }, step);
            var isCompleted = currentIndex < 1; // Alleen "Beestjes" voltooid
            var isCurrent = currentIndex == 1; // "Gegevens" is huidig

            <div class="relative flex flex-col items-center">
                <div class="w-8 h-8 @(isCompleted || isCurrent ? "bg-blue-500" : "bg-gray-300") rounded-full flex items-center justify-center text-white font-bold">
                    @(currentIndex + 1)
                </div>
                <span class="text-sm mt-2">@step</span>
                @if (step != "Bevestig")
                {
                    <div class="absolute top-1/2 transform -translate-y-1/2 w-full h-1 @(isCompleted || isCurrent ? "bg-blue-500" : "bg-gray-300")"></div>
                }
            </div>
        }
    </div>

    <div class="flex justify-between items-start mt-4">
        <!-- Linkerzijde: Formulier -->
        <div class="w-3/4">
            <h2 class="text-2xl font-bold mb-6">Gegevens Invullen</h2>
            <form asp-action="GegevensInvullen" asp-route-id="@Model.Id" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                    <label for="ContactNaam" class="block text-gray-700 text-sm font-bold mb-2">Naam</label>
                    <input asp-for="ContactNaam" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Voer uw naam in" />
                    <span asp-validation-for="ContactNaam" class="text-red-500 text-xs"></span>
                </div>

                <div class="mb-4">
                    <label for="ContactAdres" class="block text-gray-700 text-sm font-bold mb-2">Adres</label>
                    <input asp-for="ContactAdres" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Voer uw adres in" />
                    <span asp-validation-for="ContactAdres" class="text-red-500 text-xs"></span>
                </div>

                <div class="mb-4">
                    <label for="ContactEmail" class="block text-gray-700 text-sm font-bold mb-2">E-mail</label>
                    <input asp-for="ContactEmail" type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Voer uw e-mailadres in" />
                    <span asp-validation-for="ContactEmail" class="text-red-500 text-xs"></span>
                </div>

                <div class="mb-4">
                    <label for="ContactTelefoonnummer" class="block text-gray-700 text-sm font-bold mb-2">Telefoonnummer</label>
                    <input asp-for="ContactTelefoonnummer" type="tel" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Voer uw telefoonnummer in" />
                    <span asp-validation-for="ContactTelefoonnummer" class="text-red-500 text-xs"></span>
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Volgende stap
                    </button>
                </div>
            </form>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("GegevensInvullen", new { selectedDate = Model.SelectedDate, selectedBeestjesIds = Model.SelectedBeestjes.Select(b => b.Id) })" class="text-blue-500 hover:text-blue-700">
                    Al een account? Log in
                </a>
            </div>
        </div>

        <!-- Rechterzijde: Geselecteerde details -->
        <div class="w-1/4 bg-white border border-gray-200 rounded-lg shadow-lg p-6 ml-12">
            <h3 class="text-lg font-bold mb-4">Geselecteerde Gegevens</h3>
            <p><strong>Datum:</strong> @Model.SelectedDate.ToShortDateString()</p>
            <h4 class="text-md font-semibold mt-4">Geselecteerde Beestjes:</h4>
            <ul class="list-disc list-inside">
                @foreach (var beestje in Model.SelectedBeestjes)
                {
                    <li class="flex items-center mb-2">
                        <img src="~/Img/Beestjes/@beestje.Afbeelding" class="h-10 w-10 object-contain mr-2" alt="@beestje.Naam" />
                        <span>@beestje.Naam - &euro;@beestje.Prijs</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>