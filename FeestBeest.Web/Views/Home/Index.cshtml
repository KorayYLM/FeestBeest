@{
    ViewData["Title"] = "Home Page";
}

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
    <!-- Header sectie -->
    <div class="text-center">
        <h1 class="text-3xl font-bold text-gray-800">Boek een beestje</h1>
        <p class="mt-2 text-gray-600">
            Welkom bij FeestBeest! Hier kun je een of meerdere van onze dieren boeken voor jouw feestje! Kies de dag van je feestje en volg de stappen om je beestje te boeken.
        </p>
    </div>

    <!-- Formulier sectie -->
    <div class="mt-6">
        <label for="date" class="block text-gray-700 text-sm font-medium mb-2">Kies een datum:</label>
        <input 
            type="date" 
            id="date" 
            class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
        <button 
            type="submit" 
            class="mt-4 px-6 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-600"
        >
            Boeken
        </button>
    </div>

    <div class="mt-8">
        <img 
            src="/Img/farm.jpg" 
            alt="Illustratie van een boerderij met dieren" 
            class="w-64 h-auto mx-auto"
        />
    </div>

    <!-- Footer -->
    <footer class="mt-12 text-gray-500 text-sm">
        © 2024 - Koray Yilmaz<br>
    </footer>
</div>