@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center px-6">
    <div class="flex flex-col md:flex-row bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl w-full">
        <div class="flex-1 p-6">
            <!-- Header  -->
            <h1 class="text-4xl font-extrabold text-gray-800">Boek een beestje</h1>
            <p class="mt-4 text-lg text-gray-600 leading-relaxed">
                Welkom bij <span class="font-semibold text-blue-600">FeestBeest</span>! Hier kun je een of meerdere van onze dieren boeken voor jouw feestje. Kies de dag van je feestje en volg de stappen om je beestje te boeken.
            </p>
            
            <!-- Formulier  -->
            <div class="mt-6">
                <label for="date" class="block text-gray-700 text-sm font-medium mb-2">Kies een datum:</label>
                <input 
                    type="date" 
                    id="date" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                />
                <button 
                    type="submit" 
                    class="mt-6 w-full py-2 bg-blue-500 text-white font-bold rounded-md shadow-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-400 focus:ring-offset-2"
                >
                    Boeken
                </button>
            </div>
        </div>
        
       
        <div class="flex-1 flex items-center justify-center bg-gray-100 p-6">
            <img 
                src="/Img/farm.jpg" 
                alt="Illustratie van een boerderij met dieren" 
                class="rounded-lg shadow-lg max-w-xs md:max-w-sm"
            />
        </div>
    </div>
</div>