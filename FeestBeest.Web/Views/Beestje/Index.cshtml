@model IEnumerable<BeestjeViewModel>

<div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-4">Beestjes</h2>
    <a href="@Url.Action("Create")" class="uk-button uk-button-primary bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Nieuw Beestje</a>
    <div class="overflow-x-auto mt-4">
        <table class="uk-table uk-table-divider min-w-full bg-white border border-gray-200">
            <thead>
            <tr>
                <th class="px-4 py-2 border-b">Naam</th>
                <th class="px-4 py-2 border-b">Type</th>
                <th class="px-4 py-2 border-b">Prijs</th>
                <th class="px-4 py-2 border-b">Afbeelding</th>
                <th class="px-4 py-2 border-b">Acties</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-100">
                    <td class="px-4 py-2 border-b">@item.Naam</td>
                    <td class="px-4 py-2 border-b">@item.Type</td>
                    <td class="px-4 py-2 border-b">@item.Prijs</td>
                    <td class="px-4 py-2 border-b"><img src="@item.Afbeelding" class="h-16 w-16 object-contain" /></td>
                    <td class="px-4 py-2 border-b">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="uk-button uk-button-default uk-button-small bg-yellow-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600">Bewerken</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="uk-button uk-button-danger uk-button-small bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 ml-2">Verwijderen</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>